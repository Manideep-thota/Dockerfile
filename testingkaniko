pipeline {
    agent {
        kubernetes {
            yaml """
kind: Pod
spec:
  containers:
  - name: busybox
    image: busybox
    command:
    - sleep
    args:
    - 9999999
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    imagePullPolicy: IfNotPresent
    command:
    - sleep
    args:
    - 9999999
"""
        }
    }
    environment {
        DOCKER_USERNAME = 'manideep9946'
        DOCKER_TOKEN = credentials('dockerhub') 
        IMAGE_NAME = 'testrepo'
        BUILD_TAG = 'latest'
    }
    stages {
        stage('Create Dockerfile') {
            steps {
                container('busybox') {
                    script {
                        sh '''
                        echo "FROM alpine" > Dockerfile
                        echo "RUN echo 'Hello Kaniko!' > /hello.txt" >> Dockerfile
                        '''
                    }
                }
            }
        }
        stage('Build and Push Image using Kaniko') {
            steps {
                container(name: 'kaniko', shell: '/busybox/sh') {
                    script {
                        echo 'Building Docker image using Kaniko...'
                        sh '''#!/busybox/sh
                            mkdir -p /kaniko/.docker
                            echo "{\"auths\":{\"https://docker.io/v1/\":{\"auth\":\"$(echo -n ${DOCKER_USERNAME}:${DOCKER_TOKEN} | base64 -w 0)\"}}}" > /kaniko/.docker/config.json
                            /kaniko/executor \
                            --context=`pwd` \
                            --dockerfile=`pwd`/Dockerfile \
                            --destination=${DOCKER_USERNAME}/${IMAGE_NAME}:${BUILD_TAG} \
                            --destination=${DOCKER_USERNAME}/${IMAGE_NAME}:latest
                        '''
                    }
                }
            }
        }
    }
}
